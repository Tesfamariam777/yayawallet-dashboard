{
  "name": "yaya-wallet-backend",
  "version": "1.0.0",
  "description": "Backend for YaYa Wallet Transactions Dashboard",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=__tests__/.*\\.test\\.js$ --verbose",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=__tests__/integration/.*\\.test\\.js$ --verbose",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --verbose",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch --verbose",
    "test:debug": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose --runInBand --detectOpenHandles"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.1.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "uuid": "^11.1.0"
  }
}
